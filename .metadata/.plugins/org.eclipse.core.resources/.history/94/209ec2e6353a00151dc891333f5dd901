import javax.swing.Timer;

public class Time {

	public static void wait(double seconds) {
		Timer a = new Timer(0, new a());
		a.start();
		long counter = 0;
		while(counter < seconds * 1000) {
			// wait
		}
	}

}

class a implements ActionListener {

	@Override
	public void actionPerformed(ActionEvent arg0) {

	}

}
